{
  "name": "devdaily-ai",
  "version": "0.5.0",
  "description": "Your AI memory for developer work - auto-generate PR descriptions, standup notes, and work summaries",
  "type": "module",
  "bin": {
    "devdaily": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "cli",
    "git",
    "standup",
    "pr",
    "weekly-summary",
    "copilot",
    "ai",
    "developer-tools",
    "productivity",
    "devtools"
  ],
  "author": "Hem Pun <https://github.com/hempun10>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hempun10/devdaily.git"
  },
  "bugs": {
    "url": "https://github.com/hempun10/devdaily/issues"
  },
  "homepage": "https://github.com/hempun10/devdaily#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "inquirer": "^12.2.0",
    "open": "^10.1.0",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1",
    "simple-git": "^3.27.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
